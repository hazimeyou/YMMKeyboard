<UserControl
    x:Class="YMMKeyboardPlugin.YmmKeyboardSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MinWidth="200"
    MinHeight="80">

	<StackPanel Margin="10">
		<TextBlock
            Text="キーボードツール"
            FontWeight="Bold"
            Margin="0,0,0,8"/>

		<Button
            Content="MP3を挿入"
            Height="28"
            Click="InsertMp3_Click"/>
		<Button
	        Content="右に回す"
	        Height="28"
            Click="migi"/>
		<Button
	        Content="左に回す"
	        Height="28"
            Click="hidari"/>
	</StackPanel>
</UserControl>
